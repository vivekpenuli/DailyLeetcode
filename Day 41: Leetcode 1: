// ……… 50. Pow(x, n) //

class Solution {

    public double myPow(double x, int n) {
        double newn=n;
        double  ans=1;
        if(n<0) newn=-1*newn;
        while(newn>0){
if(newn%2==0)
{
    x=x*x;
    newn=newn/2;
}
else{
      ans=ans*x;
      newn=newn-1;
}
 }

 if(n<0) return 1/(ans) ;

return ans;
    }
}

